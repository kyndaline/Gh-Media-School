<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/GHNEDIDASCHOOL"
        app:srcCompat="@drawable/header_image" />

    <Button
        android:id="@+id/ghportalbutton"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/button_portal"
        android:clickable="true"
        android:focusable="true" />


    <Button
        android:id="@+id/ghonlinebutton"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/ghportalbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="182dp"
        android:background="@drawable/button_online"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/ghradiobutton"
        android:layout_width="302dp"
        android:layout_height="42dp"
        android:layout_alignEnd="@+id/ghportalbutton"
        android:layout_alignRight="@+id/ghportalbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/button_radio"
        android:clickable="true"
        android:focusable="true" />



</RelativeLayout>